NODE_ENV=production
PORT=8080

# Supabase Postgres direct connection:
SUPABASE_DB_URL=postgresql://postgres:password@host:5432/postgres?sslmode=require

# Cloudflare R2 (S3-compatible):
# Extract your account ID from the R2 URL: https://773fabe537380d65f5647dcbd32cd292.r2.cloudflarestorage.com
R2_ACCOUNT_ID=773fabe537380d65f5647dcbd32cd292
R2_ACCESS_KEY_ID=your_r2_access_key_here
R2_SECRET_ACCESS_KEY=your_r2_secret_key_here
R2_BUCKET=badges
R2_ENDPOINT=https://773fabe537380d65f5647dcbd32cd292.r2.cloudflarestorage.com
# This should be your public domain or the R2 public URL for serving badges
R2_PUBLIC_BASE_URL=https://773fabe537380d65f5647dcbd32cd292.r2.cloudflarestorage.com/badges

# Worker tuning:
BATCH_SIZE=50
POLL_INTERVAL_MS=1000
MAX_ATTEMPTS=10
